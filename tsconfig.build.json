{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
		"declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
		"strictNullChecks": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"rootDir": "./src",
		"baseUrl": ".",
        "outDir": "dist"
    },
    "include": [
        "./src/**/*.ts",
		"./typings/**/*.d.ts"
    ]
}
